<!-- 1.template导入 -->
<!-- 不可以进行递归导入，比如把另外一个template文件导入到一个tamplate文件中，再导出使用第一个template中的模板，是不可以的 -->
<import src="../../wxml/template.wxml"/>

<!-- is:对应的是tamplate中的name -->
<template is="contentItem" data="{{btnText:'按钮',content:'哈哈哈'}}"/>
<template is="contentItem" data="{{btnText:'警告',content:'嗡嗡嗡'}}"/>

