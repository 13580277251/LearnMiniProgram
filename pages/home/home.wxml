<include src="../../wxml/haeder.wxml" />

<!-------------条件判断-------------->
<!-- 1.wx:if的使用 -->
<view wx:if="{{isShow}}">哈哈哈</view>
<button size="mini" bindtap="handleswitch">切换</button>

<!-- 2.wx:elif/wx:else -->
<view wx:if="{{score >= 90}}">优秀</view>
<view wx:elif="{{score >= 80}}">良好</view>
<view wx:elif="{{score >= 60}}">及格</view>
<view wx:else>不及格</view>
<button size="mini" bindtap="handleIncreament">分数递增:{{score}}</button>

<!-- hidden属性,控制标签的显示和隐藏，隐藏之后，组件是依然存在的（display：none） -->
<view hidden="{{false}}">我是hidden属性控制的内容</view>
<!-- wx:if隐藏的时候组件是不存在的，该组件是压根不会存在的 -->
<view wx:if="{{true}}">我是wx:if属性控制的内容</view>

